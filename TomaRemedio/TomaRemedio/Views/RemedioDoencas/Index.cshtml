@model IEnumerable<TomaRemedio.RemedioDoenca>

@{
    ViewBag.Title = "Index";
}

<h2>Inicio</h2>

<p>
    @Html.ActionLink("Adicionar nova", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Doenca.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remedio.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RemediosId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Doenca.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remedio.Nome)
        </td>

        <td>
            <button class="btn-warning">@Html.ActionLink("Editar", "Edit", new { id = item.Id }) </button>
            <button class="btn-secondary"> @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) </button>
            <button class="btn-danger">@Html.ActionLink("Deletar", "Delete", new { id = item.Id })</button>
        </td>
    </tr>
}

</table>
