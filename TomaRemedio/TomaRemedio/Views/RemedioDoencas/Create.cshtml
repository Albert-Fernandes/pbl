@model TomaRemedio.RemedioDoenca

@{
    ViewBag.Title = "Relacionar Doencas Com remedios que me curaram";
}

<h2>Criar</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Remedios que funcionaram com minhas doencas</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DoencaId, "DoencaId", htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.DoencaId, new { htmlAttributes = new { @class = "form-control",@disabled = "disabled", @Value= ViewBag.Doenca.Id}})
                @Html.ValidationMessageFor(model => model.DoencaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RemedioId, "RemedioId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RemedioId", (MultiSelectList)ViewBag.Remedios, new { multiple = "multiple" })
                @Html.ValidationMessageFor(model => model.RemedioId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
