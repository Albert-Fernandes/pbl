@model IEnumerable<TomaRemedio.Doenca>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <button class="btn-success">@Html.ActionLink("Adicionar Doenca", "Create")</button>
    <button class="btn-dark"> @Html.ActionLink("Procurar Doenca", "Procura")</button>
</p>

<table class="table table-hover">
    <tr>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Causas)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Sintomas)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr scope="row">
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Causas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sintomas)
        </td>
        <td>
            <button class="btn-warning">@Html.ActionLink("Editar", "Edit", new { id = item.Id }) </button>
            <button class="btn-secondary">@Html.ActionLink("Detalhes", "Details", new { id = item.Id }) </button>
            <button class="btn-danger">@Html.ActionLink("Deletar", "Delete", new { id = item.Id })</button>
            
        </td>
    </tr>
}

</table>
