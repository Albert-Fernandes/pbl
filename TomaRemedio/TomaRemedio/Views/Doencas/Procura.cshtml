@model IEnumerable<TomaRemedio.Doenca>

@{
    ViewBag.Title = "Procura";
}
<h2>Procurar</h2>
<p>
    @Html.ActionLink("Adicionar Doenca", "Create") <br/>
    @Html.ActionLink("Voltar a Doencas", "Index")
</p>

@using (Html.BeginForm())
{
    <p>
        Encontre pelo nome: @Html.TextBox("procura")
        <input class="btn-success" type="submit" value="Pocurar" />
    </p>
}
<table class="table table-dark">
    <tr>
        <th >
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Causas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sintomas)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Causas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sintomas)
            </td>
            <td>
                <button class="btn-warning">@Html.ActionLink("Editar", "Edit", new { id = item.Id }) </button>
                <button class="btn-secondary">@Html.ActionLink("Detalhes", "Details", new { id = item.Id }) </button>
                <button class="btn-danger">@Html.ActionLink("Excluir", "Delete", new { id = item.Id })</button>
            </td>
        </tr>
    }

</table>
