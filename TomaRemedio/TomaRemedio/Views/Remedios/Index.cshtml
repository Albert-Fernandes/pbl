@model IEnumerable<TomaRemedio.Remedio>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Receita.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            <label>Receita</label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Intervalo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dosagem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Receita.Data)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsReceita)

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Intervalo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dosagem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            <button class="btn-warning"> @Html.ActionLink("Editar", "Edit", new { id = item.Id }) </button>
            <button class="btn-secondary">@Html.ActionLink("Detalhes", "Details", new { id = item.Id }) </button>
            <button class="btn-danger">@Html.ActionLink("Excluir", "Delete", new { id = item.Id })</button>
        </td>
    </tr>
}

</table>
